{
  "functions": {
    "source": "functions",
    "ignore": [
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local",
       "**/node_modules/**"
    ]
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/api/**",
        "function": "app"   
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
